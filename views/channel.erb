<div id="chat_window">
  <ol id='events'>
    <% @current_channel.messages.each do |message| %>
      <li style='border-left-color: <%= message.color %>'><%= message.content %></li>
    <% end %>
  </ol>

  <form>
    <textarea id='message' data-color="<%= session[:color] %>" data-user-id="<%= session[:session_id] %>" placeholder='type message here...'></textarea>
    <button>Send</button>
  </form>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script src='/javascripts/jquery.autosize.js'></script>
<script src='/javascripts/application.js'></script>