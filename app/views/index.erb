<script type="text/javascript">
  var currentUrl = window.btoa(unescape(encodeURIComponent( window.location.pathname )));
  var chattyloo = document.createElement("iframe");

  chattyloo.setAttribute("src", "http://chattyloo.com/" + currentUrl.substring(0, 8) + "?embed=true");
  chattyloo.setAttribute("height", "100%");
  chattyloo.setAttribute("width", "100%");

  document.getElementById('chattyloo').appendChild(chattyloo);
</script>

